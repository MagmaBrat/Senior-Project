<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:paddingBottom="10dp"
    android:layout_height="wrap_content" android:background="@color/backgroundo">

    <TextView
        android:id="@+id/transstore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Store X"
        android:textColor="@color/textocolaro"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="@+id/translogo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toEndOf="@+id/translogo"
        app:layout_constraintTop_toTopOf="@+id/translogo"
        app:layout_constraintVertical_bias="0.19" />

    <TextView
        android:id="@+id/transdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="8dp"
        android:text="03 Jan 2021 19:38"
        android:textColor="@color/textocoloro2"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/translogo"
        app:layout_constraintEnd_toEndOf="@+id/transstore"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/transstore"
        app:layout_constraintTop_toBottomOf="@+id/transstore"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/transtotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="Total: $25.45"
        android:textColor="@color/textocolaro"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.92"
        app:layout_constraintStart_toEndOf="@+id/transdate"
        app:layout_constraintTop_toBottomOf="@+id/transdate"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/translogo"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.04"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.04000002"
        app:srcCompat="@drawable/store2" />
</androidx.constraintlayout.widget.ConstraintLayout>